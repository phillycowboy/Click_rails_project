<%= render partial: "/errors", locals: {instance: @photo}%>

<%= form_for(@photo) do |f|%>

    
    <%= f.label :image, "Image Link" %>
    
    <%= f.text_field :image %> <br> <br>
    <!--this is where the user should be able to submit a link to share an image. How do you render/build the tag? -->

    <%= f.label :description %>
    <%= f.text_area :description %> <br> <br>

    <%= f.label :hash_tags %>
    <%= f.collection_select(:id, HashTag.all, :id, :tag) %>

    <%= f.submit  %>

<% end %>

